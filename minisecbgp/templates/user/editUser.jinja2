{% extends "user.jinja2" %}

{% block contentUser %}

<div id="aum" class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h3 align="center">Edit User</h3>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <form action="{{ request.route_url('userAction',action='edit') }}" method="POST">
        <div class="form-field">
          {{ form.username.label }}
          {{ form.username(disabled=True) }}
          {% if form.username.errors %}
            <ul class="errorMessage">
              {% for error in form.username.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-field">
          {{ form.role.label }}
          {{ form.role(disabled=True) }}
          {% if form.role.errors %}
            <ul class="errorMessage">
              {% for error in form.role.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-field">
          {{ form_password.password_hash.label }}
          {{ form_password.password_hash }}
          {% if form_password.password_hash.errors %}
            <ul class="errorMessage">
              {% for error in form_password.password_hash.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-field">
          {{ form_password.confirmPassword.label }}
          {{ form_password.confirmPassword }}
          {% if form_password.confirmPassword.errors %}
            <ul class="errorMessage">
              {% for error in form_password.confirmPassword.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-group">
          <button type="submit" name="form.submitted" value="Update" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

{% endblock contentUser %}