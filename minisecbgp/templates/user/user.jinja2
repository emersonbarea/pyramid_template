{% extends "../layout/dashboard.layout.jinja2" %}

{% block contentDashboard %}

  <div class="navbar">
    <h2 align="center">Users</h2>
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            {% if request.user.role == 'admin' %}
              <li>
                <a href="{{ request.route_url('userAction',action='create') }}">Create User</a>
              </li>
              <li>
                <a href="{{ request.route_url('userAction',action='delete') }}" >Delete User</a>
              </li>
            {% endif %}
            <li>
              <a href="{{ request.route_url('userAction',action='edit') }}">Change Password</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class=" {{ css_class }} ">
    <p> {{ message }} </p>
  </div>

  {% block contentUser %} {% endblock contentUser %}

{% endblock contentDashboard %}
