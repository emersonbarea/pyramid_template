{% extends "hijack.jinja2" %}

{% block contentHijack %}

<div id="aum" class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h3 align="center">Hijacking Realistic Analysis</h3>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">

      <form action="{{ request.route_url('hijackRealisticAnalysis') }}" method="POST">

        <div class="form-field">
          <p>
            Here you can create the environment for realistic analysis of the BGP topology. Choose what you want to do and follow the instructions:
          </p>
        </div>

        <p><hr></p>

        <div class="row-fluid">
          <div class="form-field">
            <p> {{ form.realistic_analysis.label }} </p>
            {% if availability %}
              <p> {{ form.realistic_analysis }} </p>
            {% else %}
              <p> {{ form.realistic_analysis(disabled=True) }} </p>
            {% endif %}
            {% if form.realistic_analysis.errors %}
              <ul class="errorMessage">
                {% for error in form.realistic_analysis.errors %}
                  <li>{{ error }}</li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>

          <p><hr></p>

          <div class="form-field">
            <p> {{ form.topology_list.label }} </p>
            {% if availability %}
              <p> {{ form.topology_list }} </p>
            {% else %}
              <p> {{ form.topology_list(disabled=True) }} </p>
            {% endif %}
            {% if form.topology_list.errors %}
              <ul class="errorMessage">
                {% for error in form.topology_list.errors %}
                  <li>{{ error }}</li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>

          <div class="form-inline form-check-inline">
            <p> {{ form.stub }} </p>
          </div>

          <p><hr></p>

          <div class="form-field">
            <p> {{ form.cluster_list.label }} </p>
            <div class="form-inline form-check-inline frame-color">
              {% if availability %}
                <p> {{ form.cluster_list }} </p>
              {% else %}
                <p> {{ form.cluster_list(disabled=True) }} </p>
              {% endif %}
              {% if form.cluster_list.errors %}
                <ul class="errorMessage">
                  {% for error in form.cluster_list.errors %}
                    <li>{{ error }}</li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          </div>

          <p><hr></p>

          <div class="form-field">
            <p> {{ form.topology_distribution_method_list.label }} </p>
            {% if availability %}
              <p> {{ form.topology_distribution_method_list }} </p>
            {% else %}
              <p> {{ form.topology_distribution_method_list(disabled=True) }} </p>
            {% endif %}
            {% if form.topology_distribution_method_list.errors %}
              <ul class="errorMessage">
                {% for error in form.topology_distribution_method_list.errors %}
                  <li>{{ error }}</li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>

          <p><hr></p>

          <div class="form-field">
            <p> {{ form.emulation_platform_list.label }} </p>
            {% if availability %}
              <p> {{ form.emulation_platform_list }} </p>
            {% else %}
              <p> {{ form.emulation_platform_list(disabled=True) }} </p>
            {% endif %}
            {% if form.emulation_platform_list.errors %}
              <ul class="errorMessage">
                {% for error in form.emulation_platform_list.errors %}
                  <li>{{ error }}</li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>

          <p><hr></p>

          <div class="form-field">
            <p> {{ form.router_platform_list.label }} </p>
            {% if availability %}
              <p> {{ form.router_platform_list }} </p>
            {% else %}
              <p> {{ form.router_platform_list(disabled=True) }} </p>
            {% endif %}
            {% if form.router_platform_list.errors %}
              <ul class="errorMessage">
                {% for error in form.router_platform_list.errors %}
                  <li>{{ error }}</li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>

          <div class="form-group">
            {% if availability %}
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmationModal">Submit</button>
            {% else %}
              <button type="button" disabled class="btn btn-primary" data-toggle="modal" data-target="#confirmationModal">Submit</button>
            {% endif %}
          </div>

          <div class="modal fade" id="confirmationModal" tabindex='-1' role="dialog" aria-labelledby="submitModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Confirmation</h4>
                </div>
                <div class="modal-body">
                  <p><strong>Attention:</strong> Are you sure you want to start the realistic analysis?</p>
                  <p>This process can take a long time due to the topology size, and will block some MiniSecBGP functions until it finish.</p>
                </div>
                <div class="modal-footer">
                  <div class="form-group">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" name="form.submitted" value="Delete" class="btn btn-primary">Submit</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </form>

    </div>
  </div>
</div>

{% endblock contentHijack %}
