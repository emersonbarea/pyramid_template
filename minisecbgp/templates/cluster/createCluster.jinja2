{% extends "cluster.jinja2" %}

{% block contentCluster %}

<div id="aum" class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h3 align="center">Configure Cluster</h3>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">

      <form action="{{ request.route_url('clusterAction',action='create') }}" method="POST">

        <div class="form-field">
          {{ form.node.label }}
          {{ form.node }}
          {% if form.node.errors %}
            <ul class="errorMessage">
              {% for error in form.node.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-field">
          {{ form.username.label }}
          {{ form.username }}
          {% if form.username.errors %}
            <ul class="errorMessage">
              {% for error in form.username.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-field">
          {{ form.password_hash.label }}
          {{ form.password_hash }}
          {% if form.password_hash.errors %}
            <ul class="errorMessage">
              {% for error in form.password_hash.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-button">
          <button type="submit" name="form.submitted" value="Create" class="btn btn-primary">Add Node</button>
        </div>

      </form>

    </div>
  </div>
</div>

{% endblock contentCluster %}


