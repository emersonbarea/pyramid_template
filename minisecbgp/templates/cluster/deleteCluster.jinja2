{% extends "cluster.jinja2" %}

{% block contentCluster %}

<div id="aum" class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h3 align="center">Delete Node</h3>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <form class="form-horizontal" action="{{ request.route_url('clusterAction',action='delete') }}" method="post">
        <div class="form-field">
          <p> Choose a node: </p>
          <p> {{ form.cluster_list }} </p>
        </div>

        <div class="form-group">
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmationModal">Delete</button>
        </div>

	    <div class="modal fade" id="confirmationModal" tabindex='-1' role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Confirmation</h4>
              </div>
              <div class="modal-body">
                <p> Are you sure you want to delete this node? </p>
                <div class="form-group">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                  <button type="submit" name="form.submitted" value="Delete" class="btn btn-danger">Delete</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{% endblock contentCluster %}