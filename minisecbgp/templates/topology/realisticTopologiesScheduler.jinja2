{% extends "realisticTopologies.jinja2" %}

{% block contentRealisticTopology %}

<div id="aum" class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h3 align="center">Schedule Automatic Updates</h3>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <form action="{{ request.route_url('realisticTopologiesAction',action='schedule') }}" method="post">

        <div class="form-field">
          {{ form.loop.label }}
          {{ form.loop }}
        </div>

        <div class="form-field">
          {{ form.date.label }}
          {{ form.date }}
        </div>

        <div class="form-button">
          <button type="submit" name="form.submitted" value="Save" class="btn btn-primary">Save</button>
        </div>

      </form>
    </div>
  </div>
</div>

{% endblock contentRealisticTopology %}