{% extends "realisticTopologies.jinja2" %}

{% block contentRealisticTopology %}

<div id="aum" class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h3 align="center">CAIDA AS-Relationship AS's agreements</h3>
    </div>
  </div>
  <div class="row-fluid" style="text-align: center;">
    <div class="span12">
      <form action="{{ request.route_url('realisticTopologiesAction',action='agreements') }}" method="post">

        <div class="span6">
          <h4> Agreement </h4>
          {% for agreement in agreements %}
            <p> {{ agreement.agreement }} </p>
          {% endfor %}
          <p> {{ form.agreement }} </p>
        </div>

        <div class="span6">
          <h4> Identification </h4>
          {% for agreement in agreements %}
            <p> {{ agreement.value }} </p>
          {% endfor %}
          <p> {{ form.value }} </p>
        </div>

        <div class="form-button">
          <button type="submit" name="form.submitted" value="Save" class="btn btn-primary">Add</button>
        </div>

      </form>
    </div>
  </div>
</div>

{% endblock contentRealisticTopology %}