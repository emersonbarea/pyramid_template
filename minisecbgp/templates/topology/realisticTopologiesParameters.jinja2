{% extends "realisticTopologies.jinja2" %}

{% block contentRealisticTopology %}

<div id="aum" class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h3 align="center">CAIDA AS-Relationship parameters</h3>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <form action="{{ request.route_url('realisticTopologiesAction',action='parameters') }}" method="post">

        <div class="form-field">
          {{ form.url.label }}
          {{ form.url }}
          {% if form.url.errors %}
            <ul class="errorMessage">
              {% for error in form.url.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-field">
          {{ form.file_search_string.label }}
          {{ form.file_search_string }}
          {% if form.file_search_string.errors %}
            <ul class="errorMessage">
              {% for error in form.file_search_string.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-button">
          <button type="submit" name="form.submitted" value="Save" class="btn btn-primary">Save</button>
        </div>

      </form>
    </div>
  </div>
</div>

{% endblock contentRealisticTopology %}