{% extends "../layout/dashboard.layout.jinja2" %}

{% block contentDashboard %}

  <div class="navbar">
    <h2 align="center">Topology Detail</h2>
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li>
              <a href="{{ request.route_url('autonomousSystem', id_topology = topology.id) }}"> Autonomous System </a>
            </li>
            <li>
              <a href="{{ request.route_url('link', id_topology = topology.id) }}">Link</a>
            </li>
            <li>
              <a href="{{ request.route_url('prefix', id_topology = topology.id) }}">BGP Prefix</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div id="aum" class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h3 align="center">Topology Detail: {{ topology.topology }} </h3>
      </div>
    </div>

    <div class="row-fluid" style="text-align: center;">
      <div class="span12">

        <div class="span5">
          <h4>Full Topology</h4>
        </div>
        <div class="span2">
        </div>
        <div class="span5">
          <h4>Non Stub Topology</h4>
        </div>

        <form class="form-horizontal" action="{{ request.route_url('topologiesAction',action='delete', id_topology = topology.id) }}" method="post">

          <div class="span5">
            <p>Unique ASs: {{ unique_as }}</p>
            {% for p2c in p2cs %}
              <p>Link {{ p2c.agreement }}: {{ p2c.p2c }}</p>
            {% endfor %}
            <p>BGP Prefixes: {{ prefixes }}</p>
          </div>

          <div class="span2">
            |
          </div>

          <div class="span5">
            <p>Unique ASs: {{ unique_as_stub }} </p>
            {% for p2c_stub in p2cs_stub %}
              <p>Link {{ p2c_stub.agreement }}: {{ p2c_stub.p2c }} </p>
            {% endfor %}
            <p>BGP Prefixes: {{ prefixes_stub }} </p>
          </div>

          <div class="form-group">
            <input type="hidden" name="id_topology" value= {{ topology.id }}>
            <input type="hidden" name="topology" value= {{ topology.topology }}>
          </div>

          {% if request.user.role == 'admin' %}
            <div class="form-group">
              <p>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmationModal">Delete Topology</button>
              </p>
            </div>
          {% endif %}

          <div class="modal fade"  style="text-align: left;" id="confirmationModal" tabindex='-1' role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Confirmation</h4>
                </div>
                <div class="modal-body">
                  <p> Are you sure you want to delete this topology? </p>
                </div>
                <div class="modal-footer">
                  <div class="form-group">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" name="form.submitted" value="Delete" class="btn btn-danger">Delete</button>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>

{% endblock contentDashboard %}