{% extends "../layout/dashboard.layout.jinja2" %}

{% block contentDashboard %}

  <div class="navbar">
    <h2 align="center">Topologies</h2>
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            {% if request.user.role == 'admin' %}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Specific Topology</a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="{{ request.route_url('realisticTopologies') }}">Realistic<br></a>
                  <a class="dropdown-item" href="#">Synthetic<br></a>
                  <a class="dropdown-item" href="#">ICT Providers<br></a>
                </div>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div id="aum" class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h3 align="center">Topology Detail: {{ topology.topology }} </h3>
      </div>
    </div>

    <div class="row-fluid" style="text-align: center;">
      <div class="span12">

        <div class="span5">
          <h4>Full Topology</h4>
        </div>
        <div class="span2">
        </div>
        <div class="span5">
          <h4>Non Stub Topology</h4>
        </div>

        <form class="form-horizontal" action="{{ request.route_url('topologiesAction',action='delete') }}" method="post">

          <div class="span5">
            <p>Unique ASs: {{ as_count }} </p>
            <p>Provider to Customer links: {{ p2c }} </p>
            <p>Peer to Peer links: {{ p2p }} </p>
            <div class="form-group">
              <p><button type="button" class="btn btn-primary">View map</button></p>
            </div>
          </div>

          <div class="span2">
            |
          </div>

          <div class="span5">
            <p>Non stub unique ASs: {{ as_stub_count }} </p>
            <p>Provider to Customer links: </p>
            <p>Peer to Peer links: </p>
            <div class="form-group">
              <p><button type="button" class="btn btn-primary">View map</button></p>
            </div>
          </div>

          <div class="form-group">
            <input type="hidden" name="id_topology" value= {{ topology.id }}>
            <input type="hidden" name="topology" value= {{ topology.topology }}>
          </div>

          <div class="form-group">
            <p>
              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmationModal">Delete Topology</button>
              <button type="button" class="btn btn-primary">Autonomous System</button>
              <button type="button" class="btn btn-primary">Link</button>
              <button type="button" class="btn btn-primary">BGP Prefix</button>
            </p>
          </div>

          <div class="modal fade"  style="text-align: left;" id="confirmationModal" tabindex='-1' role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Confirmation</h4>
                </div>
                <div class="modal-body">
                  <p> Are you sure you want to delete this topology? </p>
                  <div class="form-group">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" name="form.submitted" value="Delete" class="btn btn-danger">Delete</button>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>

{% endblock contentDashboard %}