{% extends "realisticTopology.jinja2" %}

{% block contentRealisticTopology %}

<div id="aum" class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <meta http-equiv="refresh" content="60;URL= '{{ cluster_url }}'">

      <h3 align="center">Installed Topologies</h3>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <form class="form-horizontal" action="{{ request.route_url('realisticTopologyAction',action='showRealisticTopology') }}" method="post">
        <div class="form-field">
          {% for topology in topologies %}
            <p><a href="{{ request.route_url('realisticTopologyDetail', id_topology = topology.id) }}"> {{ topology.topology }} </a></p>
          {% endfor %}
        </div>
      </form>
    </div>
  </div>
</div>

{% endblock contentRealisticTopology %}