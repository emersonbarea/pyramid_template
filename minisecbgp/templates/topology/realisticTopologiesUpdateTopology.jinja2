{% extends "realisticTopologies.jinja2" %}

{% block contentRealisticTopology %}

<div id="aum" class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h3 align="center">Update Topology</h3>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <form action="{{ request.route_url('realisticTopologiesAction',action='updateTopology') }}" method="post">

        <div class="form-field">
          {% if updating != 1 %}
            <p> {{ form.topology_list.label }} </p>
            <p> {{ form.topology_list }} </p>
          {% else %}
            <p> {{ form.topology_list.label }} </p>
            <p> {{ form.topology_list(disabled=True) }} </p>
          {% endif %}
        </div>

        <div class="form-button">
          {% if updating != 1 %}
            <button type="submit" name="form.submitted" value="Download" class="btn btn-primary">Download</button>
          {% else %}
            <button type="submit" name="form.submitted" value="Download" class="btn btn-primary" disabled>Download</button>
          {% endif %}
        </div>

      </form>
    </div>
  </div>
</div>

{% endblock contentRealisticTopology %}