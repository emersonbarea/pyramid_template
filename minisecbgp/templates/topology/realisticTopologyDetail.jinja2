{% extends "realisticTopology.jinja2" %}

{% block contentRealisticTopology %}

<div id="aum" class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h3 align="center">Topology Detail: {{ topology.topology }} </h3>
    </div>
  </div>

  <div class="row-fluid" style="text-align: center;">
    <div class="span12">

      <div class="span5">
        <h4>Full Topology</h4>
      </div>
      <div class="span2">
      </div>
      <div class="span5">
        <h4>Non Stub Topology</h4>
      </div>

      <form class="form-horizontal" action="{{ request.route_url('realisticTopologyAction',action='delete') }}" method="post">

        <div class="span5">
          <p>Unique ASs: {{ as_count }} </p>
          <p>Provider to Customer links: {{ p2c }} </p>
          <p>Peer to Peer links: {{ p2p }} </p>
        </div>

        <div class="span2">
          |
        </div>

        <div class="span5">
          <p>Non stub unique ASs: {{ as_stub_count }} </p>
          <p>Provider to Customer links: </p>
          <p>Peer to Peer links: </p>
        </div>

        <div class="form-group">
          <input type="hidden" name="id_topology" value= {{ topology.id }}>
          <input type="hidden" name="topology" value= {{ topology.topology }}>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmationModal">Delete Topology</button>
        </div>

	    <div class="modal fade"  style="text-align: left;" id="confirmationModal" tabindex='-1' role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Confirmation</h4>
              </div>
              <div class="modal-body">
                <p> Are you sure you want to delete this topology? </p>
                <div class="form-group">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                  <button type="submit" name="form.submitted" value="Delete" class="btn btn-danger">Delete</button>
                </div>
              </div>
            </div>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>

{% endblock contentRealisticTopology %}