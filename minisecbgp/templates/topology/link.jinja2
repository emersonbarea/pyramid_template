{% extends "../layout/dashboard.layout.jinja2" %}

{% block contentDashboard %}

  <div class="navbar">
    <h2 align="center">Topology Detail</h2>
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li>
              <a href="{{ request.route_url('autonomousSystem', id_topology = topology.id) }}"> Autonomous System </a>
            </li>
            <li>
              <a href="{{ request.route_url('link', id_topology = topology.id) }}">Link</a>
            </li>
            <li>
              <a href="{{ request.route_url('prefix', id_topology = topology.id) }}">BGP Prefix</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class=" {{ css_class }} ">
    <p> {{ message }} </p>
  </div>

  <div id="aum" class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h3 align="center">Links: {{ topology.topology }} </h3>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12" align="center">

        {% if request.user.role == 'admin' %}
          <form action="{{ request.route_url('linkAction',action='addEditDelete', id_topology = topology.id) }}" method="POST">
            <div class="form-field">
              <p>Enter the ASN for which you want to create, edit or delete links: {{ form.autonomous_system }}</p>
              {% if form.autonomous_system.errors %}
                <ul class="errorMessage">
                  {% for error in form.autonomous_system.errors %}
                    <li>{{ error }}</li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>

            <div class="form-button">
              <p>
                <button type="submit" name="form.submitted" value="Download" class="btn btn-primary">Enter</button>
              </p>
            </div>

          </form>
          <hr>
        {% endif %}

        <form action="#" method="POST">
          <div class="form-button">
            <p>
              <button type="button" class="btn btn-primary"
                      onclick="window.open('{{ request.route_url('linkShowAll', id_topology = topology.id) }}','_blank')">Show all Topology links
              </button>
            </p>
            <p>* Show all may take a while due to the large number of links.</p>
          </div>
        </form>

      </div>
    </div>
  </div>

{% endblock contentDashboard %}
