{% extends "realisticTopology.jinja2" %}

{% block contentRealisticTopology %}

<div id="aum" class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h3 align="center">CAIDA AS-Relationship parameters</h3>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <form action="{{ request.route_url('realisticTopologyAction',action='parameters') }}" method="post">

        <div class="form-field">
          {{ form.url.label }}
          {{ form.url }}
          {% if form.url.errors %}
            <ul class="errorMessage">
              {% for error in form.url.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-field">
          {{ form.string_file_search.label }}
          {{ form.string_file_search }}
          {% if form.string_file_search.errors %}
            <ul class="errorMessage">
              {% for error in form.string_file_search.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-field">
          {{ form.c2p.label }}
          {{ form.c2p }}
          {% if form.c2p.errors %}
            <ul class="errorMessage">
              {% for error in form.c2p.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-field">
          {{ form.p2p.label }}
          {{ form.p2p }}
          {% if form.p2p.errors %}
            <ul class="errorMessage">
              {% for error in form.p2p.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

        <div class="form-button">
          <button type="submit" name="form.submitted" value="Save" class="btn btn-primary">Save</button>
        </div>

      </form>
    </div>
  </div>
</div>

{% endblock contentRealisticTopology %}