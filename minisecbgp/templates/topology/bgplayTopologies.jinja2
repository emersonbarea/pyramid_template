{% extends "../layout/dashboard.layout.jinja2" %}

{% block contentDashboard %}

  <div class="navbar">
    <h2 align="center"><a href="https://stat.ripe.net/widget/bgplay" target="_blank">RIPE NCC BGPlay</a> topologies</h2>
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            {% if request.user.role == 'admin' %}
              <li>
                <a href="{{ request.route_url('bgplayTopologiesAction',action='upload_from_file') }}">Upload Scenario from File</a>
              </li>
              <li>
                <a href="{{ request.route_url('bgplayTopologiesAction',action='upload_from_site') }}">Download Scenario from BGPlay site</a>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class=" {{ css_class }} ">
    <p> {{ message }} </p>
  </div>

  {% block contentBGPlayTopology %} {% endblock contentBGPlayTopology %}

{% endblock contentDashboard %}
