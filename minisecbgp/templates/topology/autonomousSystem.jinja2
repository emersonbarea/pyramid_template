{% extends "../layout/dashboard.layout.jinja2" %}

{% block contentDashboard %}

  <div class="navbar">
    <h2 align="center">Topology Detail</h2>
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li>
              <a href="{{ request.route_url('autonomousSystem', id_topology = topology.id) }}"> Autonomous System </a>
            </li>
            <li>
              <a href="#">Link</a>
            </li>
            <li>
              <a href="#">BGP Prefix</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class=" {{ css_class }} ">
    <p> {{ message }} </p>
  </div>

  <div id="aum" class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h3 align="center">Autonomous Systems: {{ topology.topology }} </h3>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12" align="center">

        {% if request.user.role == 'admin' %}
          <form action="#" method="POST">
            <div class="form-field">
              <p>Enter Autonomous System Number to create, edit or delete: {{ form.autonomous_system }}</p>
              {% if form.autonomous_system.errors %}
                <ul class="errorMessage">
                  {% for error in form.autonomous_system.errors %}
                    <li>{{ error }}</li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>

            <div class="form-button">
              <p>
                <button type="submit" name="form.submitted" value="Create" class="btn btn-primary">Create</button>
                <button type="button" class="btn btn-primary"
                        onclick="location.href='{{ request.route_url('autonomousSystem', id_topology = topology.id, autonomous_system = 0) }}'">Edit
                </button>
                <button type="button" class="btn btn-primary"
                        onclick="location.href='{{ request.route_url('autonomousSystemAction', action='delete', id_topology = topology.id, id_autonomous_system = 1) }}'">Delete
                </button>
              </p>
            </div>
          </form>

          <hr>
        {% endif %}

        <form action="#" method="POST">
          <div class="form-button">
            <p>
              <button type="button" class="btn btn-primary"
                      onclick="location.href='{{ request.route_url('autonomousSystemAction', action='showAll', id_topology = topology.id, id_autonomous_system = 0) }}'">Show all Topolgy ASNs
              </button>
            </p>
          </div>
        </form>

      </div>
    </div>
  </div>

{% endblock contentDashboard %}
