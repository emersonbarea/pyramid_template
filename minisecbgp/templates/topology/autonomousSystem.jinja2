{% extends "../layout/dashboard.layout.jinja2" %}

{% block contentDashboard %}

  <div class="navbar">
    <h2 align="center">Topology Detail</h2>
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li>
              <a href="{{ request.route_url('autonomousSystem', id_topology = topology.id) }}"> Autonomous System </a>
            </li>
            <li>
              <a href="{{ request.route_url('link', id_topology = topology.id) }}">Link</a>
            </li>
            <li>
              <a href="{{ request.route_url('prefix', id_topology = topology.id) }}">BGP Prefix</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class=" {{ css_class }} ">
    <p> {{ message }} </p>
  </div>

  <div id="aum" class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h3 align="center">Autonomous Systems: {{ topology.topology }} </h3>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12" align="center">

        {% if request.user.role == 'admin' %}
          <form action="#" method="POST">
            <div class="form-field">
              <p>Enter the ASN you want to create, edit or delete: {{ form.autonomous_system(onchange="myFunction()") }}</p>
              {% if form.autonomous_system.errors %}
                <ul class="errorMessage">
                  {% for error in form.autonomous_system.errors %}
                    <li>{{ error }}</li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>

            <div class="form-button">
              <p>
                {{ form.create_button(class="btn btn-primary")}}
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal">Edit</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmationModal">Delete</button>
              </p>
            </div>

            <div class="modal fade" id="confirmationModal" tabindex='-1' role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true" align="left">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Confirmation</h4>
                  </div>
                  <div class="modal-body">
                    <p>Are you sure you want to delete this Autonomous System and <strong>all of its links and prefixes</strong>? </p>
                  </div>
                  <div class="modal-footer">
                    <div class="form-group">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                      {{ form.delete_button(class="btn btn-danger")}}
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="modal fade" id="editModal" tabindex='-1' role="dialog" aria-labelledby="editModalLabel" aria-hidden="true" align="left">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Autonomous System</h4>
                  </div>
                  <div class="modal-body">
                    <div class="form-field">
                      <p>Digit a new valid ASN (16 bit or 32 bits ASN) to change the current ASN: {{ form.edit_autonomous_system }}</p>
                      {% if form.edit_autonomous_system.errors %}
                        <ul class="errorMessage">
                          {% for error in form.edit_autonomous_system.errors %}
                            <li>{{ error }}</li>
                          {% endfor %}
                        </ul>
                      {% endif %}
                    </div>
                  </div>
                  <div class="modal-footer">
                    <div class="form-group">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                      {{ form.edit_button(class="btn btn-primary")}}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
          <hr>
        {% endif %}

        <form action="#" method="POST">
          <div class="form-button">
            <p>
              <button type="button" class="btn btn-primary"
                      onclick="window.open('{{ request.route_url('autonomousSystemShowAll', id_topology = topology.id) }}','_blank')">Show all Topology ASNs
              </button>
            </p>
            <p>* Show all may take a while due to the large number of Autonomous Systems.</p>
          </div>
        </form>

      </div>
    </div>

    <script>
      function myFunction() {
        edit_autonomous_system.value = autonomous_system.value
      }
    </script>
  </div>

{% endblock contentDashboard %}
